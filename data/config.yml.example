# Example configuration file for Yale MQTT Bridge
# Copy this to data/config.yml and fill in your values

# MQTT Configuration
topic_prefix: yale
homeassistant_prefix: homeassistant
mqtt_server_ip: localhost
mqtt_server_port: 1883
mqtt_server_user: ""
mqtt_server_password: ""

# Seam API Configuration
seam_api_key: "your-seam-api-key-here"

# HTTP Server Configuration (optional, defaults shown)
http_host: "0.0.0.0"
http_port: 8000

# Data storage
data_dir: data
database_file: data/database.json
